@ECHO OFF

SET VERSION=8.1-BETA
SET BUILDDATE=%date:~8,2%%date:~5,2%%date:~2,2%

IF "%~1"=="-release" GOTO BUILD_RELEASE
GOTO BUILD_DEBUG

:BUILD_RELEASE
SET FILENAME=MM_MurderMystery_v%VERSION%
GOTO BUILD

:BUILD_DEBUG
SET FILENAME=MM_MurderMystery_v%VERSION%_dev%BUILDDATE%
GOTO BUILD

:BUILD
IF EXIST %FILENAME%.PK3 DEL %FILENAME%.PK3
ECHO Making %FILENAME%.pk3
ECHO Please wait...
ECHO.
CScript TOOLS\ZIP.VBS SRC\ %FILENAME%.zip\
REN %FILENAME%.zip %FILENAME%.pk3
ECHO Finished making %FILENAME%.pk3 !